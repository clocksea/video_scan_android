<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="horizontal">
    
     <LinearLayout
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">
       <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText 
                android:id="@+id/cur_freq"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:hint="请输出当前频率"/>
            <Button
				android:id="@+id/freq_set"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="4"
	            android:text="设置" 
	            android:background="@drawable/bg_alibuybutton"/> 
        </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="4"
		    android:gravity="center"
		    android:orientation="horizontal">
            <EditText 
                android:id="@+id/scan_freq_start"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/bg_edittext"
                android:hint="请输入扫描开始频率"/>
         	<EditText 
                android:id="@+id/scan_freq_stop"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/bg_edittext"
                android:hint="请输入扫描结束频率"/>
		    <Button
				android:id="@+id/scan"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="2.7"
	            android:text="扫描" 
	            android:background="@drawable/bg_alibuybutton"/>         
       		</LinearLayout>
       		<LinearLayout 
       		  	android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:orientation="vertical">
		    	<Button 
		    	    android:id="@+id/serial_test"
		    	    android:layout_width="match_parent"
		    	    android:layout_height="wrap_content"
		    	    android:text="串口测试"
		    	    android:background="@drawable/bg_alibuybutton"/>
		    	<Button 
		    	    android:id="@+id/serial_send"
		    	    android:layout_width="match_parent"
		    	    android:layout_height="wrap_content"
		    	    android:text="串口发送"
		    	    android:background="@drawable/bg_alibuybutton"/>
		      	<TextView 
         		    android:id="@+id/serial_recv"
         		    android:layout_width="fill_parent"
         		    android:layout_height="fill_parent"/>
         		<GridView 
	       		    android:id="@+id/scan_result"
	       		    android:layout_width="match_parent"
	       		    android:layout_height="match_parent"
	       		    android:background="#EAEBEB"></GridView>
            		    
       		</LinearLayout>

	   </LinearLayout>
	   <LinearLayout
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
	        <SurfaceView
				android:id="@+id/mediarecorder2_Surfaceview"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" 
	            android:layout_weight="1"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="8"
	            android:orientation="horizontal">
			       <Button
						android:id="@+id/start"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="录像" 
			            android:background="@drawable/bg_alibuybutton"/>
			
			        <Button
						android:id="@+id/stop"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="暂停" 
			            android:background="@drawable/bg_alibuybutton"/> 	            
	        </LinearLayout>
 
    	</LinearLayout>	
</LinearLayout>
